{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowPutToTable",
      "Effect": "Allow",
      "Action":   [ "dynamodb:PutItem" ],
      "Resource": [ "arn:aws:dynamodb:*:*:table/a-new-startup*" ]
    },
    {
      "Sid": "AllowPublishToTopic",
      "Effect": "Allow",
      "Action":   [ "sns:Publish" ],
      "Resource": [ "arn:aws:sns:*:*:a-new-startup*" ]
    }
  ]
}